<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<!-- sp -> fuente
      dp -> para el restro

      II Interciclo
          Login → User, Pass
          Validaciones → Errrores
          Connection to Backedend → DB
          FE (WEB      APP)
          BE
      -->
    <TextView
        android:id="@+id/mytext"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="UPS APP"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="#ffff"
        android:background="#003772"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myWelcome"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/myEdit1"
        android:layout_width="280dp"
        android:layout_marginTop="90dp"
        android:layout_height="40dp"
        android:background="#e0d8d7"
        android:padding="8dp"
        android:hint="Enter Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/myEdit2"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="#e0d8d7"
        android:padding="8dp"
        android:hint="Enter LastName"
        android:textSize="20sp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/myEdit3"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="#e0d8d7"
        android:inputType="number"
        android:padding="8dp"
        android:hint="Enter Age"
        android:textSize="20sp"
        android:layout_marginTop="190dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/myEdit4"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="#e0d8d7"
        android:padding="8dp"
        android:hint="Enter Bachelor's Degree"
        android:textSize="20sp"
        android:layout_marginTop="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/myEdit5"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="#e0d8d7"
        android:padding="8dp"
        android:hint="Enter No. of Semester"
        android:textSize="20sp"
        android:layout_marginTop="290dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/myButton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#003772"
        android:textSize="15sp"
        android:text="Submit"
        android:textAllCaps="true"
        android:layout_marginTop="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/myResetButton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#EE4B2B"
        android:textSize="15sp"
        android:text="Clear"
        android:textAllCaps="true"
        android:layout_marginTop="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Student Data UPS"
        android:textSize="20sp"
        android:textColor="#ffff"
        android:background="#003772"
        android:paddingLeft="20sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="460dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>